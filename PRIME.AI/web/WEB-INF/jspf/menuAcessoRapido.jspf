        </form>
    </div>

    <!-- Links de Navegação -->
    <ul class="nav-links">
        <li><a href="<%=request.getContextPath()%>/produtos.jsp">Produtos</a></li>
        <li><a href="<%=request.getContextPath()%>/montagempc.jsp">Monte seu PC</a></li>
        <li><a href="<%=request.getContextPath()%>/chatbot.jsp">PRIMEAI</a></li>
        <li><a href="<%=request.getContextPath()%>/login.jsp">Login</a></li>
        <li><a href="<%=request.getContextPath()%>/registro.jsp">Registrar</a></li>
    </ul>
    <%=request.getContextPath()%>
</nav>
