<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!-- menu.jspf: Fragmento do menu de navegação com pesquisa e links de acesso rápido -->

<nav class="navbar">
    <div class="logo">
        <a href="home.jsp"><img src="<%=request.getContextPath()%>/images/logo_sem_fundo.png" width="500" height="350"></a> <!-- Link para a página inicial -->
    </div>
    
    <!-- Barra de Pesquisa -->
    <div class="search-container">
        <form action="<%=request.getContextPath()%>/search.jsp" method="get">
            <input type="text" name="query" placeholder="Pesquisar produtos..." />
